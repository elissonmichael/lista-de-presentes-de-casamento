<h3>Administrar Lista</h3>
<%= render "materiais/link_inserir", model: 'imagem' %>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Nome</th>
      <th>Criado Em</th>
      <th>Modificado Em</th>
      <th>Opções</th>
    </tr>
  </thead>
  <tbody>
    <% @imagens.each do |imagem| %>
      <tr>
        <td><%= image_tag(imagem.url, class:"img-fluid rounded") %></td>
        <td><%= imagem.presente %></td>
        <td><%= imagem.created_at.strftime("%l:%M%P %d/%m/%Y") %></td>
        <td><%= imagem.updated_at.strftime("%l:%M%P %d/%m/%Y") %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to 'Ver', imagem, class: "btn btn-secondary btn-info" %>
            <%= render "materiais/links_editar_excluir", model: imagem, classe: "btn-secondary" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= render "materiais/link_inserir", model: 'imagem' %>
